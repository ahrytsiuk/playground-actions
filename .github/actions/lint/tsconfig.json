{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext"
  },
  "ts-node": {
    "transpileOnly": true,     // Faster: skips type-checking during execution
    "files": true
  }
}
